import java.util.*;
import java.io.*;
public class Main
{
 Static int compute_refills(int dist,int tank,int stops[],int
n)
{
 int current_refills=0;
 int num_refills=0;
 int last_refill=0;
 while(current_refills<n-1){
 last_refill=current_refills;
 while((current_refills < n1)&&(stops[current_refills +1) – stops[last_refill]<=tank
current_refills=current_refills+1;
break;}
if (current_refills == last_refill)
 return -1;
if(current_refills<n-1) 
num_refills=num_refills+1;}
return num_refills;
}
public static void main(String[]args){
 Scanner sc=new Scanner(System.in);
 System.out.print(“Enter how much distance you want to
go: “);
 int dist=sc.nextInt();
 System.out.print(“Enter the tank capacity”);
 int tank=sc.nextInt();
 System.out.println(“Enter how many stops”);
 int n=sc.nextInt();
 System.out.println(“Enter stops: “);
 int stops[] = new int[n*n*n];
 for(int i=0;i<n;i++){
 stops[i]=sc.nextInt();
 }
 System.out.println(“Total
refills”+compute_refills(dist,tank,stops,n));
}
}
